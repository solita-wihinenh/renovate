{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "prHourlyLimit": 5,
  "schedule": ["after 10am every weekday"],
  "timezone": "UTC",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["UPDATE-NON-MAJOR"],
      "group": true,
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["UPDATE-MAJOR"],
      "group": true,
      "enabled": false
    },
    {
      "groupName": "all",
      "group": true,
      "enabled": true
    }
  ]
}
